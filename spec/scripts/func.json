[
  {
    "description": "$func call",
    "schema": { "$ref": "http://json-script.com/schema/schema.json#func" },
    "tests": [
      {
        "description": "with args",
        "data": {
          "$func": "myfunc",
          "$args": [1, 2, 3]
        },
        "valid": true
      },
      {
        "description": "without args",
        "data": {
          "$func": "myfunc"
        },
        "valid": true
      },
      {
        "description": "additional propertes are invalid",
        "data": {
          "$func": "myfunc",
          "extra": {}
        },
        "valid": false
      },
      {
        "description": "valid if $args is a valid script",
        "data": {
          "$func": "myfunc",
          "$args": {
            "$func": "myfunc2",
            "$args": [1, 2, 3]
          }
        },
        "valid": true
      },
      {
        "description": "valid if $args contain valid scripts",
        "data": {
          "$func": "myfunc",
          "$args": [
            {
              "$func": "myfunc2",
              "$args": [1, 2, 3]
            },
            {
              "$func": "myfunc2",
              "$args": [4, 5, 6]
            }
          ]
        },
        "valid": true
      },
      {
        "description": "invalid if $args is a invalid script",
        "data": {
          "$func": "myfunc",
          "$args": {
            "$func": "myfunc2",
            "extra": {}
          }
        },
        "valid": false
      },
      {
        "description": "valid if $args contain valid scripts",
        "data": {
          "$func": "myfunc",
          "$args": [
            {
              "$func": "myfunc2",
              "$args": [1, 2, 3]
            },
            {
              "$func": "myfunc2",
              "extra": {}
            }
          ]
        },
        "valid": false
      }
    ]
  }
]